<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.0.xsd">

  <grid name="sub-product-grid" title="Sub Products" model="com.axelor.apps.base.db.SubProduct">
    <field name="product"/>
    <field name="qty"/>
  </grid>

  <grid name="sub-product-editable-grid" title="Sub Products" model="com.axelor.apps.base.db.SubProduct" editable="true" expandable="true" expandable-form-view="sub-product-nested-form">
    <field name="product"/>
    <field name="qty"/>
  </grid>

  <form name="sub-product-form" title="Sub product" model="com.axelor.apps.base.db.SubProduct">
    <panel name="mainPanel">
      <field name="product"/>
      <field name="qty"/>
      <panel-related field="subProductList" grid-view="sub-product-grid"
        form-view="sub-product-form" colSpan="12"/>
    </panel>
  </form>

  <form name="sub-product-nested-form" title="Sub product" model="com.axelor.apps.base.db.SubProduct">
    <panel-related field="subProductList" colSpan="12"
                   form-view="sub-product-form" grid-view="sub-product-editable-grid"
                   x-expandable-form="sub-product-form" x-expand-all="subProductList"
                   x-display-mode="tree" x-expandable="true" x-show-header="false"/>
  </form>

</object-views>